<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@android:color/white"
    >
   <RelativeLayout
        android:id="@+id/header1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#AE0042" >

        <Button
            android:id="@+id/btnmainsearch1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:layout_marginTop="8dp"
            
            android:visibility="invisible" />
        

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Settings"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            />

        <ImageView
            android:id="@+id/action_personss"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/target2"
            android:layout_marginLeft="10dp"
            
            android:layout_centerVertical="true"
             />

    </RelativeLayout>

   <RelativeLayout
       android:id="@+id/nickname"
       android:layout_width="fill_parent"
       android:layout_height="56dp" 
       android:layout_marginTop="20dp"
       >

       <TextView
           android:id="@+id/Nicknametvagain1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
           android:paddingLeft="16dp"
           android:text="Back end Url"
           android:textColor="#4F4F4F"
           android:textSize="16sp" />

       <TextView
           android:id="@+id/Nicknametvagain2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:paddingLeft="130dp"
           android:text="192.168.2.1:8080"
           android:textColor="#AE0042"
           android:textSize="16sp" />

       <ImageView
           android:id="@+id/imgslide"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_marginRight="24dp"
           android:background="@drawable/refresh" />
       
   </RelativeLayout>

</LinearLayout>
