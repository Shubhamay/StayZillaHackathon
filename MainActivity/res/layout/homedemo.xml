<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentrelative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/header1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#AE0042" >

        <Button
            android:layout_centerVertical="true"
            android:id="@+id/btnmainsearch1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:layout_marginTop="8dp"
           
            android:visibility="invisible" />
        <ImageView
            android:visibility="invisible"
            android:id="@+id/action_person"
             android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/action_search"
            android:background="@drawable/personmenuicon"
            android:title="@string/action_person" 
            android:layout_marginRight="5dp"
            />

        <SearchView
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:id="@+id/action_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:paddingLeft="40dp"
            android:layout_marginLeft="40dp"
            android:icon="@drawable/ic_action_search"
            android:title="@string/action_search" >
        </SearchView>

        <ImageView
            android:id="@+id/action_personss"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/target2"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
             />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header1" >

        <RelativeLayout
            android:id="@+id/RelListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D2CCD0" >

            <ListView
                android:layout_marginTop="5dp"
                android:id="@+id/listView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:cacheColorHint="@android:color/transparent"
                android:clickable="true"
                android:descendantFocusability="beforeDescendants"
                android:divider="@android:color/transparent"
                android:dividerHeight="10.0sp"
                android:drawSelectorOnTop="false"
                android:fadingEdge="none"
                android:fadingEdgeLength="0dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="right"
                android:overScrollMode="never"
                android:scrollbars="none" >

            </ListView>

            <RelativeLayout
                android:id="@+id/progBarFloat"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/homeMainltsmall"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_gravity="top"
                    android:background="#D2CCD0"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="151dp"
                        android:layout_marginTop="0dp"
                        android:gravity="right"
                       
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#DADADA"
                        android:textSize="19sp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:visibility="invisible"
                        android:id="@+id/relativeLayoutsearchmain"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="#FFFFFF"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                         >

                        <Button
                            android:id="@+id/icon_search_btn"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="10dp"
                            android:background="#FFFFFF" />

                        <ImageView
                            android:id="@+id/programnamecancel"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="16dp"
                            android:layout_toLeftOf="@+id/icon_search_btn"
                            />

                        <AutoCompleteTextView
                            android:id="@+id/autocompProgCastCeleb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:background="@android:color/transparent"
                            android:gravity="left|bottom"
                          
                            android:minWidth="200dp"
                            android:paddingLeft="13dp"
                            android:textColorHint="#b0b0b0"
                            android:textSize="17sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvHeader2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:text="Header part 2"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl_sc"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/tvHeader2"
                    android:layout_gravity="bottom" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                         android:background="#AE0042"
                        android:id="@+id/tabbar"
                        
                         >

                        <Button
                        	android:visibility="invisible"
                            android:textColor="@android:color/white"
                            android:id="@+id/demoallspinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/arrow_down_white"
                            android:paddingRight="16dp"
                            android:text="All"
                            android:textSize="13sp" />

                        <Button
                            android:visibility="invisible"
                            android:id="@+id/demospinner"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_alignBaseline="@+id/demoallspinner"
                            android:layout_alignBottom="@+id/demoallspinner"
                            android:layout_marginRight="16dp"
                            android:layout_toLeftOf="@+id/demoallspinner"
                            android:background="@android:color/transparent"
                            android:drawableRight="@drawable/arrow_down_white"
                            android:text="Perfumes"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                        <Button
                            android:visibility="invisible"
                            android:id="@+id/addquestionbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                           android:layout_marginLeft="14dp"
                            android:background="@android:color/transparent"
                            android:text="Products"
                            android:textColor="@android:color/white"
                            android:textSize="13sp"
                            android:layout_centerVertical="true"
                             />

                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/searchdropProgressbarbottom"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

</RelativeLayout>